# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=./database/meals.db

# File Upload Configuration
MAX_FILE_SIZE=10485760

# Google Cloud Vision API Configuration
# Get your service account key from Google Cloud Console
# https://console.cloud.google.com/apis/credentials/serviceaccountkey
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Nutritionix API Configuration
# Get your API credentials from https://developer.nutritionix.com/
NUTRITIONIX_APP_ID=your_nutritionix_app_id_here
NUTRITIONIX_APP_KEY=your_nutritionix_app_key_here

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
